<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author = "viktor.savonin" id = "3">
        <preConditions onFail = "MARK_RAN">
            <not>
                <tableExists tableName = "system_user_roles"/>
            </not>
        </preConditions>

        <createTable tableName = "system_user_roles">
            <column autoIncrement = "true" name = "id" type = "BIGINT">
                <constraints primaryKey = "true"/>
            </column>
            <column name = "system_user_id" type = "BIGINT">
                <constraints nullable = "false"/>
            </column>
            <column name = "system_role_id" type = "BIGINT">
                <constraints nullable = "false"/>
            </column>
            <column name = "version" type = "INT">
                <constraints nullable = "false"/>
            </column>
            <column name = "created_date" type = "TIMESTAMP">
                <constraints nullable = "false"/>
            </column>
            <column name = "updated_date" type = "TIMESTAMP">
                <constraints nullable = "true"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="system_user_roles"
                       cascadeConstraints="true"/>
        </rollback>
    </changeSet>

    <changeSet author = "viktor.savonin" id = "4">
        <preConditions onFail = "MARK_RAN">
            <not>
                <foreignKeyConstraintExists
                        foreignKeyName = "fk_system_user_roles_system_user_id" />
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName = "system_user_roles"
                                 baseColumnNames = "system_user_id"
                                 constraintName = "fk_system_user_roles_system_user_id"
                                 referencedTableName = "system_users"
                                 referencedColumnNames = "id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName = "system_user_roles"
                                      constraintName = "fk_system_user_roles_system_user_id"/>
        </rollback>
    </changeSet>

    <changeSet author = "viktor.savonin" id = "5">
        <preConditions onFail = "MARK_RAN">
            <not>
                <foreignKeyConstraintExists
                        foreignKeyName = "fk_system_user_roles_system_role_id" />
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName = "system_user_roles"
                                 baseColumnNames = "system_role_id"
                                 constraintName = "fk_system_user_roles_system_role_id"
                                 referencedTableName = "system_roles"
                                 referencedColumnNames = "id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName = "system_user_roles"
                                      constraintName = "fk_system_user_roles_system_role_id"/>
        </rollback>
    </changeSet>

    <changeSet author = "viktor.savonin" id = "6">
        <preConditions onFail = "MARK_RAN">
            <not>
                <indexExists indexName = "ix_system_user_roles_system_user_id"/>
            </not>
        </preConditions>

        <createIndex indexName = "ix_system_user_roles_system_user_id"
                     tableName = "system_user_roles">
            <column name = "system_user_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName = "system_user_roles"
                       indexName = "ix_system_user_roles_system_user_id"/>
        </rollback>
    </changeSet>

    <changeSet author = "viktor.savonin" id = "7">
        <preConditions onFail = "MARK_RAN">
            <not>
                <indexExists indexName = "ix_system_user_roles_system_role_id"/>
            </not>
        </preConditions>

        <createIndex indexName = "ix_system_user_roles_system_role_id"
                     tableName = "system_user_roles">
            <column name = "system_role_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName = "system_user_roles"
                       indexName = "ix_system_user_roles_system_role_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>