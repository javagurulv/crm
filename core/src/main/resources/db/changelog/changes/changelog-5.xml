<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="team_1" id="5">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="courses"/>
            </not>
        </preConditions>

        <createTable tableName="courses">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_title" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="course_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="course_start_date" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="course_end_date" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_week" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="course_start_time" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="course_end_time" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="open_class_date" type="VARCHAR(15)">
            </column>
            <column name="open_class_start_time" type="VARCHAR(15)">
            </column>
            <column name="open_class_end_time" type="VARCHAR(15)">
            </column>
            <column name="teacher_id" type="BIGINT">
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="courses"
                       cascadeConstraints="true"/>
        </rollback>
    </changeSet>
</databaseChangeLog>